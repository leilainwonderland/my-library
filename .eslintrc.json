{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
      },
      "extends": ["standard"],
      "settings": {
        "import/resolver": {
          "node": {
            "extensions": [".js", ".ts"]
          }
        }
      },
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
      },
      "plugins": ["@typescript-eslint"],
      "rules": {
        "import/prefer-default-export": "off"
      }
}
